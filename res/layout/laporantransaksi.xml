 	android:id="@+id/btnCari" 
 	android:layout_width="fill_parent" 
 	android:layout_height="wrap_content">
</Button>
 
 <ListView  
	android:id="@+id/list_murid" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
			 	/>
    
</LinearLayout>
